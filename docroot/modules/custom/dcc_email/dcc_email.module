  return [
    GlobalTrainingRegistrationForm::GLOBAL_TRAINING_REGISTRATION_EMAIL_KEY => [
      'variables' => [
        'first_name' => NULL,
        'last_name' => NULL,
        'logo_url' => NULL,
        'big_image_url' => NULL,
        'left_image_url' => NULL,
        'activation_link' => NULL,
        'cancel_link' => NULL,
      ],
      'template' => 'global-registration-email',
    ],
    'global_training_reminder_email' => [
      'variables' => [
        'first_name' => NULL,
        'last_name' => NULL,
        'logo_url' => NULL,
        'big_image_url' => NULL,
